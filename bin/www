#!/usr/bin/env node
var debug = require('debug')('digital_heroes-2014');
var app = require('../app');

app.set('port', process.env.PORT || 3000);

// var server = app.listen(app.get('port'), function() {
//   debug('Express server listening on port ' + server.address().port);
// });

var http = require('http');

var server = http.createServer(app);
var io = require('socket.io').listen(server);

server.listen(app.get('port'), function() {
  console.log(('Express server listening on port ' + server.address().port));
});



var config = require('../server/_config');
config.init(app);

var settings = config.settings;

// Database
var database = require('../server/database.js');
database.connectDatabase(settings);
var db = database.db;
database.databaseExists(db);

// Test fixture for local work
if (app.settings.env === 'development') {
  database.createTestFixture(db);
}

// Twitter Server
// require('../server/twitter.js').twitterServer();


// var fixture = require('../server/fixture.js');
// var tweets = fixture.tweets;

io.sockets.on('connection', function (socket) {
  setInterval(function() {
    socket.emit('news', { tweet: tweets[2] });
  }, 2000);
});
